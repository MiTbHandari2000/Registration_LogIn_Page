<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:paddingTop="50px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView1"
            android:textSize="30sp"
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Don't have an account?"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=" Create your account"
                android:textColor="@color/newAccountColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/myEditText0"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter Name Of User"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:background="@layout/rounded_boarder"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/person"
        android:inputType="text" />
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter Email Address"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:background="@layout/rounded_boarder"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/mail"
        android:inputType="text" />
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter User Name"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:background="@layout/rounded_boarder"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/person"
        android:inputType="text" />
    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter Password"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:background="@layout/rounded_boarder"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/passkey"
        android:inputType="textPassword" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:text="Register"
        android:textSize="22sp"
        android:layout_marginHorizontal="60dp"
        android:paddingVertical="10dp"
        app:cornerRadius="25px"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Or Register With"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/googleplus"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/facebook"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>